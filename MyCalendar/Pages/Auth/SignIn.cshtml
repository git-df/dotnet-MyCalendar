@page
@model MyCalendar.Pages.Auth.SignInModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Logowanie</h1>
    </div>
</div>

<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="Email" class="form-label">Email:</label>
                <input type="text" class="form-control" id="Email" asp-for="UserSignInModel.Email"/>
                <span class="text-danger" asp-validation-for="UserSignInModel.Email"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Hasło:</label>
                <input type="password" class="form-control" id="Password" asp-for="UserSignInModel.Password" />
                <span class="text-danger" asp-validation-for="UserSignInModel.Password"></span>
            </div>
            <button class="btn btn-dark" type="submit">Zaloguj</button>
            <a class="btn btn-dark" asp-page="SignUp">Zarejestruj się</a>
        </form>
    </div>
</div>

@if(ViewData["Message"] != null){
    <div class="py-2">
        <div class="container">
            <span class="text-warning">@ViewData["Message"]</span>
        </div>
    </div>
}